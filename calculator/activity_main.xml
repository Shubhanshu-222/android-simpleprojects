<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="414dp"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:text="Simple Calculator"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <EditText
        android:id="@+id/editNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Input first number"

        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/editNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Input second number"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/editNum1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@+id/editNum2"
        tools:layout_editor_absoluteX="161dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Subtract"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd"
        tools:layout_editor_absoluteX="154dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Divide"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubtract"
        tools:layout_editor_absoluteX="154dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Multliply"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
        tools:layout_editor_absoluteX="154dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="199dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:hint="Result will be shown here"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"
        tools:layout_editor_absoluteX="106dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>